{
  "name": "my-nestjs-prisma-graphql-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prisma:migrate": "prisma migrate reset --force && npx prisma migrate dev --name=first_migration",
    "prestart": "npm run prisma:migrate && npx prisma migrate deploy",
    "start": "nest start --watch",
    "prebuild": "npx prisma generate",
    "build": "nest build",
    "migrate:deploy": "prisma migrate deploy",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:ci": "npx prisma migrate reset --force --skip-seed && jest --runInBand --no-cache --config jest.config.ts",
    "test:setup": "npm run test:db:restart",
    "test": "dotenv -e .env.test -- jest -i --no-cache --config jest.config.ts",
    "test:watch": "npm run test:db:restart && dotenv -e .env.test -- jest --no-cache --watch --config jest.config.ts",
    "test:watch:all": "npm run test:db:restart && dotenv -e .env.test -- jest --watchAll --no-cache --config jest.config.ts",
    "test:db:restart": "dotenv -e .env.test -- npx prisma migrate reset --force --skip-seed",
    "test:unit": "dotenv -e .env.test -- jest -i --no-cache --watch --config jest.config.ts --testMatch \"**/*.unit.spec.ts\"",
    "pretest:int": "npm run test:db:restart",
    "test:int": "dotenv -e .env.test -- jest -i --no-cache --watch --config jest.config.ts --testMatch \"**/*.int.spec.ts\"",
    "pretest:e2e": "npm run test:db:restart",
    "test:e2e": "dotenv -e .env.test -- jest -i --no-cache --watch --config jest.config.ts --testMatch \"**/*.e2e.spec.ts\"",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.10.1",
    "prisma": "^6.10.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
